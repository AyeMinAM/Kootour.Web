.cover.why-cover {
        background-image: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), url(../images/whykootour/whykootour.jpg);
}

.cover .cover-content {
    top: calc(50% - 96px);
}

.section.align-item {
    display: flex;
    align-items: center;
}

.section img {
        max-height: 325px;
            max-width: 100%;
                margin: 0 auto;
    display: block;
}

.section-title {
    margin-top: 0;
}

.yellow-list {
    padding-left: 0;
    margin: 0;
    list-style: none;
    font-size: 22px;
}

.yellow-list > li {
    position: relative;
        padding-left: 25px;
}

.yellow-list > li:after {
    width: 3px;
    content: "";
    display: block;
    position: absolute;
    left: 6px;
    top: 0;
    bottom: 0;
    background-color: #333333;
    margin: 0px;
    z-index: 2;
}

.yellow-list > li:before {
    border-radius: 50%;
    content: "";
    display: block;
    position: absolute;
    left: 0;
    top: 12px;
    background-color: #f5D10A;
    border: 3px solid #333333;
    padding: 5px;
    z-index: 4;
    margin: 0px;
}

.yellow-list > li:first-child:after {
    top: 12px;
}

.yellow-list > li:last-child:after {
    bottom: 12px;
}

.cover .become-a-guide {
    font-size: 6.0rem !important;
}

@@media (max-width: 992px) {

    .yellow-list {
        font-size: 1.6rem;
    }

    .yellow-list > li:after {
        display: none;
    }

    .section.align-item {
        display: block;
    }

    .section img {
        margin: 0 auto;
        display: block;
    }

    .section.section-img-up img {
        margin-bottom: 15px;
    }

    .why-cover {
        height: 350px!important;
        background-position: right center;
    }

    .cover .become-a-guide {
        font-size: 4.0rem !important;
    }

    .cover .cover-content {
        top: calc(50% - 64px);
    }
}

.section {
    padding-left: 45px;
    padding-right: 45px;
    padding-top: 20px;
    padding-bottom: 20px;
}

</style>

