@model MVCSite.Web.ViewModels.ForgotPassword
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section seoinfo{
    <title>Forgot Password | Kootour</title>
    @*The following 3 lines is for google plus*@
    <meta itemprop="name" content="@Model.MetaName" />
    <meta name="description" content="Forgot Password." />
    <meta itemprop="image" content="@Url.Content("~/images/kootour.ico")" />
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="robots" content="noindex,nofollow" />
}
<div class="container">
        <div class="row">

            <div class="col-lg-offset-3 col-md-offset-3 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <section class="section">
                   <span class="title">Do you forget your password?</span>

                   <p>Enter your email. We are going to send you an email with a link. Click on it for reseting your password</p>

                  @*  <form action="reset-password.html">*@
                @using (Html.BeginForm("ForgotPassword", "Account", new { }, FormMethod.Post, new { id = "ForgotPasswordForm" }))
                {
                        <div class="form-group">
@*                            <input type="email" class="form-control input-lg gray" placeholder="Your email" required>*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg gray", placeholder = "Your email" })
                        </div>
                        <div class="validation-row">
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>  
                        <button type="submit" class="btn btn-kootour-bold fullwidth">Reset my password</button>
                }
               @*     </form>*@
                </section>
            </div>
        </div>
    </div>

