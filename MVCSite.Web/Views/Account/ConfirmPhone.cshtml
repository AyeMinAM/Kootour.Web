@using MVCSite.Web
@using MVCSite.ViewResource
@model MVCSite.Web.ViewModels.ConfirmPhoneModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section seoinfo{
    <title>Confirm Phone | Kootour</title>
    @*The following 3 lines is for google plus*@
    <meta itemprop="name" content="@Model.MetaName" />
    <meta name="description" content="Confirm Phone." />
    <meta itemprop="image" content="@Url.Content("~/images/kootour.ico")" />
    <meta name="keywords" content="@Model.MetaKeywords" />
    <meta name="robots" content="noindex,nofollow" />
}

<div class="container">
        <div class="row">

            <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <section class="text-center section section-small">
                    <ul class="indicators">
                        <li data-step="step-1" class="active"><a href="#"></a></li>
                        <li data-step="step-2"><a href="#"></a></li>
                        <li data-step="step-3"><a href="#"></a></li>
                    </ul>

                    <div id="step-1">
                        <label class="title black"><b>Verify your phone number</b></label>

                        <p>This makes communication between traveller and guide easier,</p>
                        <p>helping you stay connected.</p>
                        <p>You only have to verify your phone number once.</p>

                        <div class="phone-icon">
                            <img class="" src="/images/icons/icon_phone.png" />
                        </div>

                        <div class="row">
                            <div class="col-lg-offset-3 col-md-offset-3 col-sm-offset-2 col-xs-offset-2 col-lg-6 col-md-6 col-sm-8 col-xs-8">
                               @* <form id="phone-form" class="form-horizontal">*@
                                @using (Html.BeginForm("ConfirmPhone", "Account", new { }, FormMethod.Post, new { id = "ConfirmPhoneForm" }))
                                {
                                    @Html.HiddenFor(m => m.DoneControllerName)
                                    @Html.HiddenFor(m => m.DoneActionName)
                                    <div class="form-group required">
                                        <div class="col-sm-12">
                                            <div class="input-group">
                                                <span class="input-group-addon" style="border:0">
                                                     <span class="glyphicon glyphicon-phone" aria-hidden="true"></span>
                                                </span>
                                                @Html.DropDownListFor(m => m.AreaCode,Model.AreaCodeOptions,new { @class = "form-control input-lg gray", placeholder = "Choose country" })

                                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control input-lg gray", placeholder = "Your Phone Number" })
                                            </div>
                                            <div class="validation-row">
                                                @Html.ValidationMessageFor(m => m.PhoneNumber)
                                            </div>       
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-kootour-bold fullwidth">Send Verification Code</button>
                                }
                                @*</form>*@
                            </div>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
